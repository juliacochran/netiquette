{
  "manifest_version": 2,

  "name": "Netiquette",
  "description": "This Chrome Extension helps to combat issues with online etiquette by providing detailed etiquette tips for various social networking, blog, email, forum, media, and news sites. ",
  "version": "1.0",

  "icons": { "48": "images/logo48.png",
          "128": "images/logo128.png" },


 "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "run_at": "document_end",
      "js": ["javascripts/jquery-ui.min.js",
              "javascripts/jquery.min.js"

            ],

        "css": [ "styles/jquery-ui.css" ]
    }
  ],
 "permissions": ["tabs", "http://*/*", "background"],

  "background": {
    "scripts": ["javascripts/background.js"]
  },


  "web_accessible_resources": [
    "styles/popup.css"
  ],

  "browser_action": {
    "default_icon": "images/logo19.png",
    "default_popup": "popup.html"
  }
}